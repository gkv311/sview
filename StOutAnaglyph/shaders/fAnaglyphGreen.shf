uniform sampler2D texL, texR;
varying vec2 fTexCoord;

void main(void) {
    vec4 colorL = texture2D(texL, fTexCoord);
    vec4 colorR = texture2D(texR, fTexCoord);

    colorL.r = 0.0;
    colorL.b = 0.0;
    colorR.g = 0.0;
    gl_FragColor = colorL + colorR;
}
